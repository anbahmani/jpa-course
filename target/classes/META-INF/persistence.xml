<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 version="3.2"
			 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd">

	<persistence-unit name="h2" transaction-type="RESOURCE_LOCAL">

		<exclude-unlisted-classes>false</exclude-unlisted-classes>

		<class>fr.pantheonsorbonne.ufr27.miage.jpa.domain.Employee</class>
		<class>fr.pantheonsorbonne.ufr27.miage.jpa.domain.Department</class>

		<properties>
			<property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
			<property name="jakarta.persistence.jdbc.url" value="jdbc:h2:~/test;AUTO_SERVER=TRUE"/>
			<property name="jakarta.persistence.jdbc.user" value="sa"/>
			<property name="jakarta.persistence.jdbc.password" value=""/>

			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			<property name="hibernate.archive.autodetection" value="class"/>

		</properties>
	</persistence-unit>
</persistence>
